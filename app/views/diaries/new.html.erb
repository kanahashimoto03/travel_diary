<h1>新規投稿ページ</h1>

<%= form_with model: @diary, local: true do |f| %>
  <%= f.collection_select :country_id, Country.all, :id, :name, {}, {class:"country-select"} %>
  <%= f.text_field :city, placeholder: "city name" %>
  <%= f.collection_select :category_id, Category.all , :id, :name, {}, {class:"category-select"} %>
  <%= f.text_field :date, placeholder: "travel date" %>
  <%= f.text_field :recommendations, placeholder: "recommendations" %>
  <%= f.text_field :things_to_avoide, placeholder: "things to avoide" %>
  <%= f.text_field :things_to_bring, placeholder: "things to bring" %>
  <%= f.submit '投稿する'%>
<% end %>